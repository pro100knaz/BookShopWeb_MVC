@page
@model BookShopRazorWeb.Pages.Categories.DeleteModel



<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
	</div>
	<div class="mb-3 row">
		<label asp-for="Category.Name" class="p-1"></label>
		<input asp-for="Category.Name" disabled class="form-control" />
	
	</div>
	<div class="mb-3 row">
		<label asp-for="Category.DisplayOrder" class="p-1"></label>
		<input asp-for="Category.DisplayOrder" disabled class="form-control" />
		
	</div>

	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-danger form-control">Delete Record</button>

		</div>
		<div class="col-6 col-md-3">
			<a asp-page="Category" class="btn btn-secondary btn-outline-secondary border form-control ">
				Back to List
			</a>
		</div>
	</div>

</form>